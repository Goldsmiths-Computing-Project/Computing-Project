<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <title>Forum</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="stylesheet" href="forum.css" />
   </head>

   <body>
    <div class = "grid-container">
        <header>
            <div class = navbar>
                <a href="#">Home</a>
                <a href="#">Forum</a>
                <div class="search-container">
                   <form action="/search" method="GET">
                      <input type="text" id="university" placeholder="Search..." name="university" required>
                   </form>
                </div>
                <p>Dark mode</p>
                <label class="switch">
                <input type="checkbox" checked>
                <span id = "ColourChanger" class="slider round"></span>
                </label>
                <div class="dropdown">
                   <button class="dropbtn">Menu</button>
                   <div class="dropdown-content">
                      <a href="#">Sign in</a>
                      <a href="#">Sign up</a>
                      <a href="#">Profile</a>
                      <a href="/contact">Contact</a>
                   </div>
                </div>
             </div>

        </header>

        <main class="center">
            <% posts.forEach(function(post) { %>
                <div class="container "> </a>
                    <div class="threads_header">
                        <h1><%= post.topic_title %></h1>
                    </div>
                    <div class="threads_user">
                        <!-- User icon-->
                        <a href=""> <img scr="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="" width="" height=""> </a>
                        <!-- User name-->
                        <a href=""> <%= post.username %> </a>
                    </div>
                    <div class="threads_body">
                        <!--  User comments     -->
                        <p><%= post.post_content %> </p>
                    </div>
                </div>
                <% }) %> 

